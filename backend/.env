# Configuración del servidor
PORT=8080
GIN_MODE=debug

# Configuración de la base de datos PostgreSQL
DB_HOST=your-production-host.com
DB_PORT=5432
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=your-db-name
DB_SSLMODE=require
DB_SSLCERT=ca-certificate.crt
DB_SSLROOTCERT=ca-certificate.crt

# Configuración JWT
JWT_SECRET=raborimet_crm_super_secret_key_2024
JWT_EXPIRATION_HOURS=24

# Configuración CORS
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With

# Configuración de archivos
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Configuración de email (para futuras implementaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@raborimet.com

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de la aplicación
APP_NAME=Raborimet CRM
APP_VERSION=1.0.0
APP_ENV=development

# Configuración de rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configuración de sesiones
SESSION_SECRET=raborimet_session_secret_2024
SESSION_MAX_AGE=86400

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30